.navbar.navbar-default.navbar-app(role="navigation")
  .container
    <!-- Brand and toggle get grouped for better mobile display -->
    .navbar-header.pull-right
      form.form-sm.navbar-form.navbar-left(role="search")
        .form-group
          input.form-control.input-xs(type="text" placeholder="Search Our Site")
        button.btn.btn-xs.btn-default.btn-search(type="submit")
          i.fa.fa-search.fa-fw
      ul.nav.navbar-nav.pull-right.nav-auth
        li(ng-show='!auth.user')
          a.btn-link-light(data-sv-login-popover='')
            i.fa.fa-sign-out.fa-lg
            span.span-top-nav Войти
        li(ng-if='auth.user.provider==\'facebook\'')
          a.btn-link-light(ui-sref='{{userLink}}')
            span.span-top-nav {{userName}}
            img.img-fb(ng-src="{{userPic}}")
        li(ng-if='auth.user.provider==\'password\'')
          a.btn-link-light
            i.fa.fa-user.fa-lg
            span.fb-name Админ
        li(ng-show='auth.user')
          a.btn-link-light(data-toggle="tooltip" data-placement="left" title="Выйти" ng-click='fenLogout()')
            i.fa.fa-sign-out.fa-lg
            span.span-top-nav

