.tabsdemoDynamicTabs form > [layout] > span {
  padding-top: 2px;
}

.tabsdemoDynamicTabs .long > input {
  width: 264px;
}

.tabsdemoDynamicTabs .md-button.add-tab {
  margin-top: 20px;
  max-height: 30px !important;
}

