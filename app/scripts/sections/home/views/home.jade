div
	h1  Breaking News
	hr
	md-grid-list(md-cols-sm='1', md-cols-md='2', md-cols-gt-md='6', md-row-height-gt-md='1:1', md-row-height='2:2', md-gutter='12x', md-gutter-gt-sm='8px')
		md-grid-tile.gray(md-rowspan='3', md-colspan='2')
			md-grid-tile-footer
				h3 #1: (3r x 2c)
		md-grid-tile.green
			md-grid-tile-footer
				h3 #2: (1r x 1c)
		md-grid-tile.yellow
			md-grid-tile-footer
				h3 #3: (1r x 1c)
		md-grid-tile.blue(md-rowspan='2')
			md-grid-tile-footer
				h3 #4: (2r x 1c)
		md-grid-tile.red(md-rowspan='2', md-colspan='2')
			md-grid-tile-footer
				h3 #5: (2r x 2c)
		md-grid-tile.green(md-rowspan='2')
			md-grid-tile-footer
				h3 #6: (2r x 1c)


hr
.tr
	.col-xs-12
		.pull-right.btn-wrapper
			sv-add-post-modal(ng-show='isAdmin', posts="posts")
.tr
	.col-sx-12
		ul.slide-view.list-unstyled
			li(ng-repeat="(key,post) in posts | orderBy:'time':true")
				sv-article
