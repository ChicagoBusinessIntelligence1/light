@import 'nib'
@import 'functions'
@import '../scripts/auth/styles/auth'
@import '../scripts/header/styles/header'
@import '../scripts/footer/styles/footer'
@import '../scripts/sections/home/styles/home'
@import '../scripts/common/styles/sv-home-news-grid'

md-grid-list
  margin 8px
  .gray
    background #f5f5f5
  .green
    background #b9f6ca
  .yellow
    background #ffff8d
  .blue
    background #84ffff
  .darkBlue
    background #80d8ff
  .deepBlue
    background #448aff
  .purple
    background #b388ff
  .lightPurple
    background #8c9eff
  .red
    background #ff8a80
  .pink
    background #ff80ab
  md-grid-tile
    transition all 300ms ease-out 50ms
    md-icon
      padding-bottom 32px
    md-grid-tile-footer
      background rgba(0, 0, 0, 0.68)
      height 36px
  md-grid-tile-footer
    figcaption
      width 100%
      h3
        margin 0px
        font-weight 700
        width 100%
        text-align center
