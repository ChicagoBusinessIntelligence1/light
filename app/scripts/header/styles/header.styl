@import 'nib'

@import '../../../styles/functions'

/**********************
     =top-navbar
***********************/
.toolbar-red
  background: linear-gradient(#D32F2F, #C62828, #B71C1C) !important

.first-newspaper
  margin-bottom 10px

  @media screen and (max-width: 992px)
    margin-bottom 0px
    font-size 12px !important

.svet-logo-s
  position relative
  line-height 70px
  font-size 90px
  color color-svet-red
  font-weight 800
  font-family "Roboto", sans-serif

.svet-logo-text
  position relative
  top -5px
  font-size 26px
  color color-svet-red
  font-weight 900

.navbar-brand
  display inline-block
  text-align center
  padding-top 20px
  padding-bottom 25px
  img
    display inline-block


.navbar-header
  padding 10px
  padding-bottom 5px

.navbar-form
  margin 0px

.nav-auth
  li
    a
      padding 0px 5px

.navbar-svet
  li
    a
      color #393939 !important
      .text
        color #393939 !important
        padding-left 5px
        display inline-block

.navbar-app
  margin-bottom 0px
  border-radius 0px
  background-color white !important
  li
    a
      .text
        padding-left 5px
        display inline-block
      .fa-angle-down
        margin-left 5px !important

.span-top-nav
  display inline-block
  padding-left 5px
  padding-right 5px
  font-family 'Raleway', sans-serif

.brand-name
  font-size 20px

.brand-name
.btn-search
.fb-name
  margin-left 5px

.navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus
  background-color inherit

.img-fb
  width 20px
  height 20px
  margin-right (@width / 4) !important

/**********************
	=Weather
***********************/
.weather-city
  font-size 14px

  @media screen and (max-width: 992px)
    font-size 10px !important



